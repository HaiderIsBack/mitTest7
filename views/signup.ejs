<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- style css -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/Images/favicon.ico">
    <title>Malaysian Institute Of Technology</title>
</head>

<body>
    <!-- Side Bar -->
    <div class="sidebar" id="sideBar">
        <div class="close-btn" onclick="sideBar()">
            <div></div>
            <div></div>
        </div>
        <ul class="pl-0">
            <li>
                <a href="/"><i class="fa fa-home"></i> Home</a>
            </li>
            <li>
                <a href="/about"><i class="fa fa-comments"></i> About</a>
            </li>
        </ul>
    </div>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark " style="background: linear-gradient(-45deg,#fe8c00,#f83600);">
        <div class="container">
            <a href="#" class="navbar-brand"><img src="/Images/logo.png" style="width: 50px;" alt=""> <h3 class="d-none d-md-inline align-middle ">Malaysian Institute Of Technology</h3><h3 class="d-inline d-md-none align-middle">MIT</h3></a>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item d-none d-md-block">
                    <a href="/" class="nav-link first-link"><i class="fa fa-home"></i> Home</a>
                </li>
                <li class="nav-item d-none d-md-block">
                    <a href="#" class="nav-link last-link"><i class="fa fa-comments"></i> About</a>
                </li>
                <li class="nav-item d-block d-md-none">
                    <i class="fa fa-bars fa-2x text-light" onclick="sideBar()"></i>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Signup Form -->
    <div class="container mt-5">
        <h1 class="text-center mb-5">Sign Up</h1>
        <form action="/signup_check" method="post">
            <div class="row">
                <div class="col">
                    <label for="name">Your Name</label>
                    <input type="text" class="form-control" name="name" required>
                </div>
                <div class="col">
                    <label for="fname">Father Name</label>
                    <input type="text" class="form-control" name="father_name" required>
                </div>
            </div>
            <label for="roll">Roll Number (*Collage Roll No. Only)</label>
            <input type="number" class="form-control" name="roll" required>
            <label for="technology">Technology</label>
            <input list="tech" name="technology" class="form-control">
            <datalist id="tech">
                <option value="Computer Information Technology">
                <option value="Electrical Technology">
                <option value="Mechanical Technology">
                <option value="Civil Technology">
            </datalist>
            <label for="class">Class</label>
            <input list="class" name="class" class="form-control">
            <datalist id="class">
                <option value="1st-Year">
                <option value="2nd-Year">
                <option value="3rd-Year">
            </datalist>
            <div class="row">
                <div class="col">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="i.e email@gmail.com" required>
                </div>
                <div class="col">
                    <label for="email">Phone</label>
                    <input type="number" class="form-control" name="phone" placeholder="i.e 03xxxxxxxx" required>
                </div>
            </div>
            <label for="dob">Date Of Birth (*DOB)</label>
            <input type="date" class="form-control" name="dob" required>
            <div class="alert alert-warning mt-3 mb-3" role="alert">
                <strong>Note!</strong> Password Must be Strong i.e Combination of alphabets,numbers and special
                characters.
            </div>
            <label for="roll">Password</label>
            <input type="password" class="form-control" name="pwd" required>
            <label for="roll">Confirm Password</label>
            <input type="password" class="form-control" name="confirm_pwd" required>
            <p class="text-muted">Already Have Account? <a href="/login">Login Now</a> </p>
            <button class="btn text-light mt-2" style="background: linear-gradient(-45deg,#fe8c00,#f83600);">Create
                Account</button>
        </form>
    </div>
</body>
<script>
    var isOpened = false;
    var sidebar = document.getElementById("sideBar");
    function sideBar() {
        if (isOpened) {
            sidebar.classList.remove("active");
            isOpened = false;
        } else {
            sidebar.classList.add("active");
            isOpened = true;
        }
    }
</script>

</html>